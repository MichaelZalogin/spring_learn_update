<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--Вызов конструктора по умолчанию-->
    <!--    <bean id="pool1" name="p1,p2,p3" class="com.application.spring.database.pool.ConnectionPool"/>-->
    <bean id="pool2" class="com.application.spring.database.pool.ConnectionPool">
        <constructor-arg type="java.lang.String" index="0" value="postgres"/>
        <constructor-arg type="java.lang.Integer" index="1" value="10"/>
        <constructor-arg type="java.util.List" index="2">
            <list>
                <value>--arg1=valie1</value>
                <value>--arg2=valie2</value>
                <value>--arg3=valie3</value>
            </list>
        </constructor-arg>
        <constructor-arg type="java.util.Map" name="properties">
            <map>
                <entry key="URL" value="postgresUrl"/>
                <entry key="password" value="123"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="PostgresDriver"/>
    </bean>

</beans>